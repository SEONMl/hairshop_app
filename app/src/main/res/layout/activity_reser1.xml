<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".reservation.Reser1">

    <TextView
        android:id="@+id/shop_name_tv"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{미용실 이름}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        app:layout_constraintBottom_toTopOf="@+id/select_date_dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_name_tv"
        tools:layout_editor_absoluteX="64dp" />
    <DatePicker
        android:id="@+id/select_date_dp"
        android:layout_width="282dp"
        android:layout_height="264dp"
        android:datePickerMode="spinner"
        android:spinnersShown="false"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 선택"
        app:layout_constraintBottom_toTopOf="@+id/select_time_tp"
        tools:layout_editor_absoluteX="64dp" />

    <TimePicker
        android:id="@+id/select_time_tp"
        android:layout_width="266dp"
        android:layout_height="146dp"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@+id/select_date_dp"
        tools:layout_editor_absoluteX="72dp" />






    <Button
        android:id="@+id/to_select_design_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="디자인 선택하기"
        app:layout_constraintTop_toBottomOf="@+id/select_time_tp"
        tools:layout_editor_absoluteX="245dp" />

</androidx.appcompat.widget.LinearLayoutCompat>